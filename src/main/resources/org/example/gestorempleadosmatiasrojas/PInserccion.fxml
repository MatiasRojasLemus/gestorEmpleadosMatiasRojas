<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="VBoxInsert" fx:id="VBoxInsert" fillWidth="false" prefHeight="325.0" prefWidth="630.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controladores.CInserccion">

   <padding>
      <Insets bottom="15.0" left="30.0" right="30.0" top="15.0"/>
   </padding>
   <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestor de Empleados" textAlignment="CENTER"
         wrappingWidth="560.0">
      <font>
         <Font size="30.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="15.0"/>
      </VBox.margin>
   </Text>

   <TabPane prefHeight="35.0" prefWidth="562.0" tabClosingPolicy="UNAVAILABLE">
      <Tab id="NVBold" fx:id="tabNE" style="-fx-font-weight: bold;" text="Nuevo Empleado"/>
      <Tab fx:id="tabCon" onSelectionChanged="#abrirPestanaConsultas" text="Consultar"/>
   </TabPane>

   <Label fx:id="lblNom" prefHeight="18.0" prefWidth="156.0" text="Nombre"/>

   <TextField fx:id="txtFldNom" prefHeight="25.0" prefWidth="150.0">
      <VBox.margin>
         <Insets bottom="5.0"/>
      </VBox.margin>
   </TextField>

   <Label id="lblPuesto" fx:id="lblPuesto" text="Puesto"/>

   <ComboBox fx:id="CBPuesto" prefWidth="150.0" visibleRowCount="6">
      <VBox.margin>
         <Insets bottom="5.0"/>
      </VBox.margin>
   </ComboBox>

   <Label fx:id="lblSalario" text="Salario"/>

   <TextField fx:id="txtFldSalario" prefWidth="150.0">
      <VBox.margin>
         <Insets bottom="20.0"/>
      </VBox.margin>
   </TextField>

   <Button fx:id="btnInsert" mnemonicParsing="false" text="Insertar">
      <VBox.margin>
         <Insets bottom="15.0"/>
      </VBox.margin>
   </Button>

</VBox>
